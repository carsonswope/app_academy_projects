<h4>Make Comment</h4>

<form action="<%= comments_url %>" method="POST">
  <%= auth_token %>
  <label for="body">Body</label>
  <input type="text" name="comment[body]" id="body">

  <input type="hidden" name="comment[commentable_id]" value="<%= subject.id %>">
  <input type="hidden" name="comment[commentable_type]" value="<%= subject.class %>">

  <input type="submit" value="Submit Comment">
</form>
